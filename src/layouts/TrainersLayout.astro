---
import BaseHead from "~/components/BaseHead.astro";
import Footer from "~/components/Footer.astro";

interface Props {
  title: string;
  description?: string;
  fullScreen?: boolean;
}

const { title, description, fullScreen } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description ?? title} />
    <style is:global>
      a:hover {
        text-decoration: none;
      }

      .astro-code {
        overflow: auto;
        overflow-x: unset !important;
      }

      body:has(dialog[open]) {
        overflow: hidden;
      }

      .button {
        display: flex;
        align-items: center;
        font-size: inherit;
        font-family: inherit;
        background-color: var(--color-green-accent);
        transition:
          color 150ms ease,
          background 150ms ease;
        color: #ffffff;
        text-decoration: none;
        border-radius: var(--border-radius);
        padding: 1rem;
        height: 3rem;
        width: fit-content;
        border: none;
      }

      .button:hover {
        background-color: var(--color-green-accent-light);
        cursor: pointer;
      }

      .fullscreen {
        display: grid;
        grid-template-rows: 50px 1fr;
        min-height: 100vh;
        margin-bottom: 50px;
      }
    </style>

    <style>
      .container {
        margin-inline: auto;
        max-width: 1400px;
        padding-inline: 20px;
      }
    </style>
  </head>
  <body>
    <slot name="header" />
    <main class:list={["container", fullScreen && "fullscreen"]}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
