---
import type {
  SandpackFiles,
  SandpackPredefinedTemplate,
} from "@codesandbox/sandpack-react";
import { SandpackEditor } from "./SandpackEditor/SandpackEditor";

export interface SandpackEditorProps {
  template: SandpackPredefinedTemplate;
  files: SandpackFiles;
  nextUrl?: string;
  options?: {
    showSidebar?: boolean;
    customSetup: {
      dependencies: Record<string, string>;
    };
  };
}

const { files, template, nextUrl, options } =
  Astro.props as SandpackEditorProps;
---

<SandpackEditor
  template={template}
  client:only="react"
  files={files}
  nextUrl={nextUrl}
  options={options}
/>
