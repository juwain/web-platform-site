---
import { getContents } from "../../../utils/getContents";
import Contents from "../../../components/Contents.astro";
import type { Part } from "../../../types";

export const title = "Паттерны проектирования в TypeScript";
export const description = `Паттерны проектирования — общепринятые переиспользуемые шаблонные решения конкретных проблем при создании софта. Они помогают сделать код более упорядоченным, предсказуемым и надёжным и позволяют говорить с другими разработчиками на одном языке.`;

export const longDescription = `При работе с кодом больше всего времени уходит на его чтение и понимание, а не написание. Код — не только инструкция для компьютера, но и объяснение ваших намерений другим людям. Если написать хаотичный, но работающий код, то другим разработчикам станет труднее понимать его и вносить осмысленные изменения.
<br><br>${description}`;

export const duration = "20 часов";
export const level = "junior+";

export const order = 10;
export const status = "completed";

import pictureObj from "./assets/_picture.svg";
export const picture = pictureObj;

export const lessonParts = getContents(
  (await Astro.glob("./**/*.astro")) as Part[]
);
---

<Contents
  parts={lessonParts}
  title={title}
  description={longDescription}
  picture={picture}
/>
